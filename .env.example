# Mentor AI Environment Configuration
# Copy this file to .env or .env.local and fill in the values

# ===================
# API Configuration
# ===================
API_PORT=3000
API_URL=http://localhost:3000

# ===================
# Frontend Configuration
# ===================
WEB_PORT=4200
FRONTEND_URL=http://localhost:4200

# ===================
# Node Environment
# ===================
# Options: development, staging, production
NODE_ENV=development

# ===================
# Database Configuration (Story 1.2)
# ===================
# Platform database (tenant registry)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mentor_ai_platform

# Tenant database connection settings
TENANT_DB_HOST=localhost
TENANT_DB_PORT=5432
TENANT_DB_USER=postgres
TENANT_DB_PASSWORD=postgres

# Tenant connection pool settings (optional, defaults shown)
# TENANT_DB_POOL_MAX=10
# TENANT_DB_IDLE_TIMEOUT_MS=30000
# TENANT_DB_ACQUIRE_TIMEOUT_MS=5000

# ===================
# Testing Configuration
# ===================
# Required for integration tests - separate database to avoid data pollution
# TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mentor_ai_test

# ===================
# Authentication (Story 1.6)
# ===================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.mentor-ai.com
AUTH0_CALLBACK_URL=http://localhost:4200/callback
AUTH0_LOGOUT_URL=http://localhost:4200

# JWT Configuration
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# ===================
# Email / SMTP Configuration (Story 1.7)
# ===================
# SMTP server settings for sending invitation and notification emails
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@mentor-ai.com

# Team member limit (MVP - subscription-based limits come in billing stories)
MAX_TEAM_MEMBERS=5

# ===================
# AI/LLM Configuration (Future)
# ===================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ===================
# Upstash Redis (Story 2.2)
# ===================
# Required for rate limiting, token tracking, and request queuing
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Rate Limits (optional, has defaults)
RATE_LIMIT_TENANT_PER_MINUTE=60
RATE_LIMIT_USER_PER_MINUTE=20

# Token Quotas (optional, has defaults)
DEFAULT_TENANT_TOKEN_QUOTA=1000000

# ===================
# Logging
# ===================
LOG_LEVEL=debug
